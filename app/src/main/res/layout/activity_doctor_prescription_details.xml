<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <include
            android:id="@+id/include_petlover_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/toolbar_layout_petlover_header" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/header"
                android:background="@color/new_gree_color">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/txt_doctorname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="@string/doctor_name"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/txt_dr_specialization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="@string/powered_by"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/txt_webname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="@string/powered_by"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"/>
                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="@string/phone"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"/>

                    <ImageView
                        android:id="@+id/img_applogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/app_logo"
                        tools:ignore="ContentDescription"
                        android:scaleType="fitXY"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"/>



                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/horizontal_dotted_line"
                    android:layerType="software" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/owner_s_name"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_owners_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/pet_name_details"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_pet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/pet_type_details"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_pet_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/breed"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_breed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="wrap_content"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                        <TextView
                            android:id="@+id/txt_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:id="@+id/ll_diagnosis">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="match_parent"
                            android:text="Diagnosis"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>


                        <TextView
                            android:id="@+id/txt_diagnosis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal"
                        android:id="@+id/ll_sub_diagnosis">

                        <TextView
                            android:layout_width="@dimen/width_appoitmentdetails"
                            android:layout_height="match_parent"
                            android:text="Sub diagnosis "
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/futuramediumbt"/>


                        <TextView
                            android:id="@+id/txt_sub_diagnosis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/new_sec_txt_color"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/futuramediumbt"/>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/horizontal_dotted_line"
                    android:layerType="software" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_allergies">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="@string/allergies"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:fontFamily="@font/futuramediumbt"
                    android:id="@+id/txt_allergies"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="2"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:minLines="2"
                    android:lines="2"
                    android:gravity="top|start"
                    android:background="@drawable/textview_bg_white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_doctor_comment">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="@string/doctor_comments"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:fontFamily="@font/futuramediumbt"
                    android:id="@+id/txt_doctor_comment"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="5"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:minLines="3"
                    android:lines="5"
                    android:gravity="top|start"
                    android:background="@drawable/textview_bg_white" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="@string/prescription_medicines"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_headername"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/medicine"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no_of_days"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:text="@string/consumption_per_day"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:text="M.."
                                android:fontFamily="@font/futuramediumbt"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:text="A.."
                                android:fontFamily="@font/futuramediumbt"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:text="N.."
                                android:fontFamily="@font/futuramediumbt" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_add_circle_outline_24"
                    android:visibility="invisible"
                    android:layout_marginStart="10dp"
                    />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_prescriptiondetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/txt_no_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/norecordsfound"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />
    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="end"
        android:background="@color/white">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/app_logo"
            android:scaleType="fitXY"
            android:id="@+id/img_signature"
            tools:ignore="ContentDescription"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/txt_ftr_doctorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/doctor_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:layout_marginEnd="20dp"/>





    </LinearLayout>


</RelativeLayout>

