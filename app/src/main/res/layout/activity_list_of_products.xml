<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:background="@color/bg_white">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/include_petlover_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/toolbar_layout_petlover_header" />




    </LinearLayout>
    <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/headerView"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner_bgm"
                    android:fontFamily="@font/futuramediumbt"
                    android:hint="@string/search"
                    android:inputType="textWebEmailAddress"
                    android:padding="15dp"
                    android:textColor="@color/green"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="16sp"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:maxLines="1"
                    android:imeOptions="actionDone"/>

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/image"
                    android:padding="8dp"
                    android:src="@drawable/search" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="@string/advancedsearch"
                        android:textColor="@color/new_txt_color"
                        android:textSize="16sp"
                        android:visibility="invisible"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        tools:ignore="RelativeOverlap">

                        <RelativeLayout
                            android:id="@+id/rl_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_rounded_corner_btn"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <EditText
                                android:id="@+id/edt_sort"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:focusable="false"
                                android:fontFamily="@font/futuramediumbt"
                                android:hint="@string/sort_by"
                                android:inputType="none"
                                android:textColorHint="@color/white"
                                android:textSize="12sp"
                                tools:ignore="Autofill,LabelFor"
                                android:layout_marginStart="5dp"/>

                            <ImageView
                                android:id="@+id/img_sort"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_toEndOf="@+id/edt_sort"
                                android:layout_marginEnd="5dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/image"
                                android:src="@drawable/ic_sort"
                                android:scaleType="center"
                                android:layout_marginStart="10dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_filters"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/new_rounded_corner_btn_orange"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <EditText
                                android:id="@+id/edt_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:focusable="false"
                                android:fontFamily="@font/futuramediumbt"
                                android:hint="@string/filters"
                                android:inputType="none"
                                android:textColorHint="@color/new_txt_color"
                                android:textSize="12sp"
                                tools:ignore="Autofill,LabelFor"
                                android:layout_marginStart="5dp"
                                />

                            <ImageView
                                android:id="@+id/img_filter"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/edt_filter"
                                android:contentDescription="@string/image"
                                android:src="@drawable/ic_filter"
                                android:scaleType="center"
                                android:layout_centerVertical="true"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_today_deal"
            android:layout_marginTop="10dp" />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txt_no_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:visibility="gone"/>





        </LinearLayout>
    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/bg_white">

        <include
            android:id="@+id/include_petlover_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_layout_petlover_footer_new_shaped" />

    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/new_light_green"
        app:indicatorName="LineSpinFadeLoaderIndicator" />




</RelativeLayout>
