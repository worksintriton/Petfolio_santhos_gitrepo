<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteTwo"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/back"
                tools:ignore="ContentDescription" />


            <ImageView
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/mapicn"
                tools:ignore="ContentDescription"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txt_currentlocation"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/futuramediumbt"
                android:gravity="center_vertical"
                android:text="@string/current_location"
                android:textColor="@color/new_four_txt_color"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/img_sos"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_sos"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_notifications"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bag"
                    tools:ignore="ContentDescription"
                    android:layout_marginStart="20dp" />
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user"
                    tools:ignore="ContentDescription"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:layout_marginTop="10dp">


            <RelativeLayout
                android:id="@+id/rl_root"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_selectedserviceimage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dietcian" />


            </RelativeLayout>

            <TextView
                android:id="@+id/txt_selected_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/selected_service_category"
                android:textColor="@color/new_txt_color"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold"/>


        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/vertical_dotted_line"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="@string/service_providers"
                        android:textColor="@color/new_txt_color"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        tools:ignore="RelativeOverlap">

                        <RelativeLayout
                            android:id="@+id/rl_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_rounded_corner_btn"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <EditText
                                android:id="@+id/edt_sort"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:focusable="false"
                                android:fontFamily="@font/futuramediumbt"
                                android:hint="@string/sort_by"
                                android:inputType="none"
                                android:textColorHint="@color/white"
                                android:textSize="12sp"
                                tools:ignore="Autofill,LabelFor"
                                android:layout_marginStart="5dp"/>

                            <ImageView
                                android:id="@+id/img_sort"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_toEndOf="@+id/edt_sort"
                                android:layout_marginEnd="5dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/image"
                                android:src="@drawable/ic_sort"
                                android:scaleType="center"
                                android:layout_marginStart="10dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_filters"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/new_rounded_corner_btn_orange"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <EditText
                                android:id="@+id/edt_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:focusable="false"
                                android:fontFamily="@font/futuramediumbt"
                                android:hint="@string/filters"
                                android:inputType="none"
                                android:textColorHint="@color/new_txt_color"
                                android:textSize="12sp"
                                tools:ignore="Autofill,LabelFor"
                                android:layout_marginStart="5dp"
                               />

                            <ImageView
                                android:id="@+id/img_filter"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/edt_filter"
                                android:contentDescription="@string/image"
                                android:src="@drawable/ic_filter"
                                android:scaleType="center"
                                android:layout_centerVertical="true"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_totalproviders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/providers"
                android:textAllCaps="false"
                android:textColor="@color/new_sec_txt_color"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_nearbyservices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_no_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/norecordsfound"
                    android:textColor="@color/color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_communicationtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/communication_type"
                        android:textColor="@color/new_sec_txt_color"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchButton_communcationtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:checked="false"

                        />

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <include
            android:id="@+id/include_petlover_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_layout_petlover_footer" />



    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/new_green_btn"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


</RelativeLayout>