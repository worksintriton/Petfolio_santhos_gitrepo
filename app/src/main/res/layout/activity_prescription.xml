<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@color/new_header_bg">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp">


            <RelativeLayout
                android:id="@+id/back_rela"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_arrow_white"
                    android:contentDescription="@string/image" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/prescriptiondetails"
                android:textColor="@color/white"
                android:textSize="@dimen/big_txt_size"
                android:textStyle="bold"/>


        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollablContent"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Doctor diagnosis "
                    android:textColor="@color/new_txt_color"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:id="@+id/rl_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangular_curved_corner"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <Spinner
                        android:id="@+id/sprdiagnosistype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/option"
                        tools:ignore="ContentDescription"
                        android:layout_margin="5dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_sub_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="Doctor sub diagnosis "
                    android:textColor="@color/new_txt_color"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
                <RelativeLayout
                    android:id="@+id/rl_sub_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangular_curved_corner"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <Spinner
                        android:id="@+id/sprsub_diagnosis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/option"
                        tools:ignore="ContentDescription"
                        android:layout_margin="5dp"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="@string/doctor_comments"
                    android:textColor="@color/new_txt_color"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:fontFamily="@font/futuramediumbt"
                    android:id="@+id/etdoctorcomments"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_comments"
                    android:inputType="textMultiLine"
                    android:textSize="14sp"
                    android:maxLines="4"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:minLines="4"
                    android:lines="4"
                    android:gravity="top|start"
                    android:background="@drawable/textview_bg_white"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:maxLength="150"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/futuramediumbt"
                    android:text="@string/prescription_medicines"
                    android:textColor="@color/new_txt_color"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/prescriptionmsg"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/ll_headername"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/medicine"
                    android:textColor="@color/new_txt_color"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/no_of_days"
                    android:textColor="@color/new_txt_color"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/consumption_per_day"
                    android:textColor="@color/new_txt_color"
                    android:layout_marginStart="10dp" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_add_circle_outline_24"
                    android:visibility="invisible"
                    android:layout_marginStart="10dp"
                     />


            </LinearLayout>




            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/medicine"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/no_of_days"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/consumption_per_day"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_add_circle_outline_24"
                    android:visibility="invisible"
                    android:layout_marginStart="10dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <EditText
                    android:id="@+id/et_tabletname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:background="@drawable/edittext_bg_rect"
                    android:layout_marginStart="10dp"
                    android:maxLength="25"
                    tools:ignore="Autofill,LabelFor,TextFields"/>

                <EditText
                    android:id="@+id/et_quanity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:background="@drawable/edittext_bg_rect"
                    android:layout_marginStart="10dp"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:maxLength="2"/>


                <EditText
                    android:id="@+id/et_consumption"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:background="@drawable/edittext_bg_rect"
                    android:layout_marginStart="10dp"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:maxLength="2"/>

                <Button
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_add_circle_outline_24"
                    android:layout_marginStart="10dp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_rounded_corner_btn"
            android:fontFamily="@font/futuramediumbt"
            android:text="Preview"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size_for_header"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/new_green_btn"
        app:indicatorName="LineSpinFadeLoaderIndicator" />


</RelativeLayout>

