<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="160dp"
    android:layout_height="260dp"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/backgm"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_my_dogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/futuramediumbt"
        android:maxLines="1"
        android:text="@string/my_dogs"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/txt_serv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/futuramediumbt"
        android:maxLines="1"
        android:text="@string/trainer"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="5dp" />

    <View
        android:layout_width="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:layout_marginStart="5dp"
        android:background="#ffffff"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/txt_serv_desc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/futuramediumbt"
        android:text="@string/supporting_sub_text_here"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>